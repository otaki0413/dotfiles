# Aliases
alias cdd='cd ~/Documents'
alias cdh='cd ~'
alias ..='cd ..'
alias d='docker'
alias dc='docker compose'
alias ll='ls -l'
alias p='pnpm'
alias nui='npx npm-check --update'
alias pui='pnpm upgrade -i --latest'
alias g='cd $(ghq list -p | fzf)'
alias cc='code $HOME/.claude'
alias gr='git reset --soft HEAD^'


# Env
export BUN_INSTALL="$HOME/.bun"
export HOMEBREW_FORBIDDEN_FORMULAE="node python python3 pip npm pnpm yarn bun claude"
export CARAPACE_BRIDGES='zsh,fish,bash,inshellisense'


# PATH Setting（zsh style）
typeset -U path
path=(
  $HOME/.local/bin
  $HOME/bin
  $HOME/.bun/bin
  $path
)
export PATH


# Tools
eval "$(mise activate zsh)"


# Completion
fpath=(
  ~/.zfunc
  $fpath
)

autoload -Uz compinit
compinit

zstyle ':completion:*' format $'\e[2;37mCompleting %d\e[m'
source <(carapace _carapace)

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
source $(brew --prefix)/share/zsh-autosuggestions/zsh-autosuggestions.zsh
source /usr/local/share/powerlevel10k/powerlevel10k.zsh-theme

# To customize prompt, run `p10k configure` or edit ~/.p10k.zsh.
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh
