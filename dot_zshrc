# Aliases
alias cdd='cd ~/Documents'
alias cdh='cd ~'
alias ..='cd ..'
alias d='docker'
alias dc='docker compose'
alias ll='ls -l'
alias p='pnpm'
alias nui='npx npm-check --update'
alias pui='pnpm upgrade -i --latest'
alias g='cd $(ghq list -p | fzf)'
alias cc='code $HOME/.claude'
alias gr='git reset --soft HEAD^'


# Env
export BUN_INSTALL="$HOME/.bun"
export HOMEBREW_FORBIDDEN_FORMULAE="node python python3 pip npm pnpm yarn bun claude"


# PATH Setting（zsh style）
typeset -U path
path=(
  $HOME/.local/bin
  $HOME/bin
  $HOME/.bun/bin
  $path
)
export PATH


# Tools
source ~/.docker/init-zsh.sh || true
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
eval "$(mise activate zsh)"


# Completion
fpath=(
  ~/.zfunc
  ~/.docker/completions
  $fpath
)

autoload -Uz compinit
compinit
